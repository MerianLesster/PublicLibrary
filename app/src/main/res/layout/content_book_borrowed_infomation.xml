<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_book_borrowed_infomation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorControlHighlight"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.publiclibrary.BookBorrowedInfomation"
    tools:showIn="@layout/activity_book_borrowed_infomation">

    <TextView
        android:id="@+id/textView50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView34"
        android:layout_marginTop="69dp"
        android:text="Book Name :"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        tools:typeface="serif" />

    <TextView
        android:id="@+id/textView49"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView34"
        android:layout_marginTop="12dp"
        android:text="BookID :"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        tools:textSize="18sp"
        tools:typeface="serif" />

    <TextView
        android:id="@+id/textView51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView50"
        android:layout_marginTop="31dp"
        android:text="Category :"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        tools:typeface="serif" />

    <TextView
        android:id="@+id/textView52"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView51"
        android:layout_marginTop="30dp"
        android:text="Borrower ID :"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        tools:typeface="serif" />

    <TextView
        android:id="@+id/textView53"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView52"
        android:layout_marginTop="30dp"
        android:text="Shelf No. :"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        tools:typeface="serif" />

    <TextView
        android:id="@+id/textView54"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView53"
        android:layout_marginTop="39dp"
        android:text="Date Of Borrowed :"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:typeface="serif" />

    <Button
        android:id="@+id/btn__delete"
        android:drawableTop="@drawable/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:text="DELETE"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/txt_Date"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="21dp" />

    <Button
        android:id="@+id/btn__search"
        android:drawableLeft="@drawable/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_BookID"
        android:layout_alignParentEnd="true"
        android:background="@android:color/holo_blue_dark"
        android:text="SEARCH"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn__Add"
        android:drawableTop="@drawable/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn__delete"
        android:layout_alignBottom="@+id/btn__delete"
        android:layout_alignEnd="@+id/textView53"
        android:background="@android:color/holo_blue_dark"
        android:text="ADD"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn__update"
        android:drawableTop="@drawable/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:text="UPDATE"
        android:textColor="@android:color/background_light"
        android:layout_alignBaseline="@+id/btn__Add"
        android:layout_alignBottom="@+id/btn__Add"
        android:layout_toEndOf="@+id/textView52" />

    <TextView
        android:id="@+id/textView34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Borrower Details"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="30sp"
        android:textStyle="normal|bold|italic"
        android:typeface="sans" />

    <EditText
        android:id="@+id/txt_BookID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView49"
        android:layout_alignBottom="@+id/textView49"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:foreground="@android:color/transparent"
        android:hint="B002"
        android:inputType="textPersonName"
        android:singleLine="false"
        android:textColor="@android:color/background_dark" />

    <EditText
        android:id="@+id/txt_BookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView50"
        android:layout_alignBottom="@+id/textView50"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:foreground="@android:color/transparent"
        android:inputType="textPersonName"
        android:singleLine="false"
        android:textColor="@android:color/background_dark" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView52"
        android:layout_alignStart="@+id/txt_BorrowerID"
        android:foreground="@android:color/transparent"
        android:textColor="@android:color/background_dark" />

    <EditText
        android:id="@+id/txt_BorrowerID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView52"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:foreground="@android:color/transparent"
        android:inputType="textPersonName"
        android:singleLine="false"
        android:textColor="@android:color/background_dark" />

    <EditText
        android:id="@+id/txt_ShelfNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView54"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:foreground="@android:color/transparent"
        android:inputType="textPersonName"
        android:singleLine="false"
        android:textColor="@android:color/background_dark" />

    <EditText
        android:id="@+id/txt_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView54"
        android:layout_alignBottom="@+id/textView54"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView54"
        android:ems="10"
        android:inputType="date" />

</RelativeLayout>
