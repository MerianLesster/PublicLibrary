    <EditText
        android:id="@+id/txt___BookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView14"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:foreground="@android:color/transparent"
        android:inputType="textPersonName"
        android:singleLine="false"
        android:textColor="@android:color/background_dark"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txt___Author"
        app:layout_constraintRight_toRightOf="@+id/txt___Author"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="57dp"
        app:layout_constraintLeft_toLeftOf="@+id/txt___Author" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignStart="@+id/txt_AUTHOR"
        android:layout_marginEnd="26dp"
        android:foreground="@android:color/transparent"
        android:textColor="@android:color/background_dark"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/txt___Author"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="52dp"
        app:layout_constraintTop_toTopOf="@+id/textView17" />

    <EditText
        android:id="@+id/txt___Author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/price"
        android:layout_alignBottom="@+id/price"
        android:layout_alignParentEnd="true"
        android:ems="10"
        android:foreground="@android:color/transparent"
        android:inputType="textPersonName"
        android:singleLine="false"
        android:textColor="@android:color/background_dark"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txt___Price"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/spinner3" />

    <Button
        android:id="@+id/btn_Search_Book"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_ADD"
        android:background="@android:color/white"
        android:drawableLeft="@drawable/search"
        android:text="SEARCH"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/txt___BookID"
        android:layout_marginEnd="27dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="4dp" />

